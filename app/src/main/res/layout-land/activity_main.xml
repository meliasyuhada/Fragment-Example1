    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragmentebooktitle"
        android:name="id.com.diaryme.meliasepti.fragmentexample1.EbookTitle"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/ebooks_title" />

    <fragment
        android:id="@+id/fragmentebookdescription"
        android:name="id.com.diaryme.meliasepti.fragmentexample1.EbookDescription"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/ebook_description" />

</LinearLayout>